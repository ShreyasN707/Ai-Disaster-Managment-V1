# Server Configuration
PORT=10000
NODE_ENV=production
ORIGIN=http://localhost:3000

# Database
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/disaster-management?retryWrites=true&w=majority

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1d
ADMIN_REGISTRATION_CODE=change_this_admin_code

# Email Configuration (Gmail)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-16-character-app-password

# Twilio Configuration (SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Logging
LOG_LEVEL=info

# File Uploads
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# ML Service Configuration
ML_MODEL_PATH=./tfjs_model
ML_PREDICTION_ENDPOINT=http://localhost:5000
ENABLE_ML_SERVICE=true

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
FRONTEND_BUILD_DIR=./frontend/dist

# Production Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:4000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
